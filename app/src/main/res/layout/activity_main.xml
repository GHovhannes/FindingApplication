<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="CHEESE..."
            android:textSize="@dimen/_25ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            android:textAlignment="center"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/new_logo"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/to_verification_stage"
            android:layout_gravity="center"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="REGISTER"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:background="@drawable/button_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/to_agreement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_19sdp"
                android:text="Пользовательские Соглашения"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#0823AA"
                android:textSize="@dimen/_10ssp"
                android:textStyle="italic" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Нажимая на кнопку 'Register' вы автоматически соглашаетесь с пользовательским соглашением*"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>