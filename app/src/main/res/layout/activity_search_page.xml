<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="@dimen/_24sdp"
    android:scrollbars="none"
    android:background="@color/background"
    tools:context=".SearchPageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:src="@drawable/dwayne"/>
        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/count"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/importer"
            android:layout_gravity="center"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Import photo to find"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:background="@drawable/button_background"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/finder"
            android:layout_gravity="center"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Find faces on the photo"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:background="@drawable/button_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_40sdp">
            <ImageView
                android:id="@+id/to_profile_page"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/inactive_page_background"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_gravity="center"
                android:src="@drawable/profile"/>
            <ImageView
                android:id="@+id/to_search_page"
                android:layout_width="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:background="@drawable/active_page_background"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/search"/>
            <ImageView
                android:id="@+id/to_history_page"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:background="@drawable/inactive_page_background"
                android:layout_marginStart="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/history"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>